@model IEnumerable<MartialArtsWebApp.Models.ClassTiming>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by Name/Day/Level: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string) <br /><br />
    
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Class_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class_Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class_Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class_Level)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Class_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class_Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class_Level)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ClassID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ClassID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ClassID })
            </td>
        </tr>
    }

</table>
