@model IEnumerable<MartialArtsWebApp.Models.StudentFee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Date from: @Html.TextBox("dateFrom", ViewBag.CurrentFilter as string) <br /><br />
        Date to: @Html.TextBox("dateTo", ViewBag.CurrentFilter as string) <br /><br />
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentFee_datetime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MembershipType.Membership_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TestFee.TestID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentFee_datetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory.Product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipType.Membership_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestFee.TestID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StudentFeeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.StudentFeeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StudentFeeID })
            </td>
        </tr>
    }

</table>
